<div class="container col-6 col-md-4">
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">To-Do List</a>
    </div>
  </nav>


  <div class="d-grid gap-2">
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <input class="form-check-input me-1" type="checkbox" value="" id="firstCheckbox">
          <label class="form-check-label" for="firstCheckbox"><h4><%= link_to task.title, task_path(task), class: 'btn btn-light'%></h4>
          </label>
        </li>
      <% end %>
    </ul>
    <div class="d-grid gap-2">
      <p class="mt-3"><%= link_to 'Add a new task', new_task_path, class: 'btn btn-outline-info d-grid gap-2' %></p>
    </div>
  </div>
</div>
